{{!-- This code generates HTML with dynamic content using Handlebars  --}}
<div class="container row dashboard-container">
    <div class="card dashboard-post">
        {{!-- Post title, linked to the edit route of this post --}}
       <h4 class="card-header-title post-title has-background-primary"><a class="link" href="/dashboard/edit/{{id}}">{{title}}</a></h4>
        <div class="card-content post-body">
        {{!-- Post content --}}
        <p class="content post-content">{{content}}</p>
        {{!-- Displaying the name and creation date of the user who posted the message on date of creation--}}
        <p class="content post-author">Posted by <span class="post-username">{{user.username}}</span> on {{format_date created_at}}</p>
        </div>
    </div>
</div>
